# PropCalc Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=PropCalc Backend
VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vantage_ai
POSTGRES_USER=vantage_user
POSTGRES_PASSWORD=your_secure_password_here

# API
API_PREFIX=/api
CORS_ORIGINS=https://propcalc.ai,https://www.propcalc.ai

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# External APIs
DLD_API_URL=https://api.dubailand.gov.ae
DLD_API_KEY=your_dld_api_key_here

# Sentry - DO NOT COMMIT ACTUAL DSN TO VERSION CONTROL
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.xlsx,.json

# Data Processing
BATCH_SIZE=1000
MAX_WORKERS=4

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# DLD Integration
DLD_DATA_DIRECTORY=./data
DLD_UPDATE_INTERVAL=3600

# KML Integration
KML_DATA_DIRECTORY=./data
